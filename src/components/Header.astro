---
import "../styles/global.css";

import HeaderButton from "./HeaderButton.astro";
---

<header class=" flex flex-col py-8 px-4 mx-auto max-w-xl lg:py-16 lg:px-6 items-center">
  <div class="mx-auto text-center mb-5 lg:mb-8">
    <h2
      class="font-custom mb-4 text-5xl text-center tracking-tight font-extrabold text-white"
    >
      SpaceX Launches ðŸš€
    </h2>
  </div>
